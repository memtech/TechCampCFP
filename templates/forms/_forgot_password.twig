<form id="forgot" class="form-horizontal" action="{{ url('forgot_password_create') }}" method="POST">
    {{ form_row(form._token) }}
    <div class="form-group">
        <label for="form-forgot-email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
            <input id="form-forgot-email" type="email" name="forgot[email]" class="form-control" placeholder="Enter your email address">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success">Reset my password</button>
        </div>
    </div>
</form>